<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualInput">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="pH"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                app:srcCompat="@drawable/ph" />

            <SeekBar
                android:id="@+id/seekPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/valuePh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                app:srcCompat="@drawable/hardness" />

            <TextView
                android:id="@+id/txtHardness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Hardness (mg/l)" />

            <SeekBar
                android:id="@+id/seekHardness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/valueHardness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <TextView
                android:id="@+id/txtTotalChlorine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Chlorine (mg/l)" />

            <SeekBar
                android:id="@+id/seekTotalChlorine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/valueChlorine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <TextView
                android:id="@+id/txtIron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iron (mg/l)" />

            <SeekBar
                android:id="@+id/seekIron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/valueIron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <TextView
                android:id="@+id/txtAlkalinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Alkalinity (mg/l)" />

            <SeekBar
                android:id="@+id/seekAlkalinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/valueAlkaline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <TextView
                android:id="@+id/txtLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lead" />

            <SeekBar
                android:id="@+id/seekLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/valueLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>